<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveUsers</servlet-name>
        <servlet-class>servlets.saveUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkUser</servlet-name>
        <servlet-class>servlets.checkUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkEmail</servlet-name>
        <servlet-class>servlets.checkEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginuserServlet</servlet-name>
        <servlet-class>servlets.loginuserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkLogIn</servlet-name>
        <servlet-class>servlets.checkLogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadUsers</servlet-name>
        <servlet-class>servlets.loadUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadActiveUsers</servlet-name>
        <servlet-class>servlets.loadActiveUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>groupMassageHandler</servlet-name>
        <servlet-class>servlets.groupMassageHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>privatemsgHandler</servlet-name>
        <servlet-class>servlets.privatemsgHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeUsername</servlet-name>
        <servlet-class>servlets.takeUsername</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveUsers</servlet-name>
        <url-pattern>/saveUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkUser</servlet-name>
        <url-pattern>/checkUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkEmail</servlet-name>
        <url-pattern>/checkEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginuserServlet</servlet-name>
        <url-pattern>/loginuserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkLogIn</servlet-name>
        <url-pattern>/checkLogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadUsers</servlet-name>
        <url-pattern>/loadUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadActiveUsers</servlet-name>
        <url-pattern>/loadActiveUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>groupMassageHandler</servlet-name>
        <url-pattern>/groupMassageHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>privatemsgHandler</servlet-name>
        <url-pattern>/privatemsgHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeUsername</servlet-name>
        <url-pattern>/takeUsername</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
